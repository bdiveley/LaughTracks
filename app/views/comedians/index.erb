<section id="statistics">
  <h1> Statistics </h1>
    <h5>Average Age: <%= @comedians.average_age %> years old</h5>
    <h5>Average Special Run Length: <%= Special.average_length %> minutes</h5>
    <h5>Comedian Breeding Grounds:
      <% @comedians.unique_cities.each do |city| %>
      <%= city %><span> </span>
      <% end %>
    <h5>Total Number of Specials: <%=Special.count%></h5>
    </h5>
</section>

<% @comedians.each do |comedian| %>
  <ul id="comedian_<%= comedian.id %>">
    <h3><%= comedian.name %></h3>
    <li>Age: <%= comedian.age %></li>
    <li>Born in: <%= comedian.city %></li>
    <li># of Specials: <%= comedian.specials.count %></li>
    <% comedian.specials.each do |special| %>
      <ul id="special_<%= special.id %>">
        <li><%= special.name %></li>
        <li><%= special.length %> minutes</li>
        <img src=<%= special.url %>>
      </ul>
      <% end %>
  </ul>
<% end %>
